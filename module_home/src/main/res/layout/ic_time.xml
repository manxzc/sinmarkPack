    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginBottom="@dimen/dimen10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="@dimen/size_70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="开始时间:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/size_6dp"
                android:layout_marginRight="@dimen/size_90dp"
                android:layout_weight="20"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_start_time_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="2021" />

                <TextView
                    android:id="@+id/tv_start_time_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年" />

                <EditText
                    android:id="@+id/et_start_time_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="6" />

                <TextView
                    android:id="@+id/tv_start_time_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月" />

                <EditText
                    android:id="@+id/et_start_time_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="31" />

                <TextView
                    android:id="@+id/tv_start_time_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/size_70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="结束时间:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_weight="20"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_stop_time_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="2021" />
                <TextView
                    android:id="@+id/tv_stop_time_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年" />

                <EditText
                    android:id="@+id/et_stop_time_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="6" />

                <TextView
                    android:id="@+id/tv_stop_time_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月" />

                <EditText
                    android:id="@+id/et_stop_time_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="31" />
                <TextView
                    android:id="@+id/tv_stop_time_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日" />
            </LinearLayout>

            <!--            <Button-->
            <!--                android:id="@+id/button"-->
            <!--                android:layout_width="@dimen/size_80dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@color/color_535cdc"-->
            <!--                android:text="查询" />-->
            <Button
                android:id="@+id/btn_summary_select"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen30"
                android:layout_gravity="center"
                android:background="@drawable/shape_up_bg"
                android:text="查询"
                android:textColor="@color/white"></Button>

        </LinearLayout>
    </LinearLayout>
</layout>